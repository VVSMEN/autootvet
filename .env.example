# ===================================
# AutoOtvet Configuration
# ===================================

# Application
APP_NAME=AutoOtvet
DEBUG=False
SECRET_KEY=your-secret-key-here-change-me

# Database
DATABASE_URL=sqlite:///./data/autootvet.db

# Security (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key-here

# ===================================
# Marketplace API Keys
# ===================================

# Wildberries API
# Получить: https://seller.wildberries.ru/supplier-settings/access-to-api
WB_API_KEY=

# Ozon Seller API
# Получить: https://seller.ozon.ru/app/settings/api-keys
OZON_CLIENT_ID=
OZON_API_KEY=

# ===================================
# LLM Providers (выберите один или несколько)
# ===================================

# Выбор провайдера по умолчанию
# Варианты: openai | anthropic | google | gigachat | yandexgpt | perplexity | ollama
LLM_PROVIDER=gigachat

# OpenAI (GPT-4o-mini, GPT-4.1)
# Получить: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude (Haiku, Sonnet)
# Получить: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Google Gemini (Flash, Pro)
# Получить: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# GigaChat (Сбер)
# Получить: https://developers.sber.ru/studio/workspaces
GIGACHAT_API_KEY=
GIGACHAT_CREDENTIALS=

# YandexGPT (Yandex Cloud)
# Получить: https://cloud.yandex.ru/docs/iam/operations/api-key/create
YANDEX_API_KEY=
YANDEX_FOLDER_ID=

# Perplexity AI (Sonar, Sonar Pro)
# Получить: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# Ollama (локальные модели)
OLLAMA_BASE_URL=http://localhost:11434

# ===================================
# LLM Configuration
# ===================================

# Параметры генерации
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=200
LLM_MODEL=  # Оставьте пустым для модели по умолчанию

# ===================================
# Telegram Bot (для модерации)
# ===================================

# Создать бота: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Получить chat_id: отправьте /start боту @userinfobot
TELEGRAM_CHAT_ID=

# ===================================
# Review Processing
# ===================================

# Интервал проверки новых отзывов (в минутах)
REVIEW_CHECK_INTERVAL=5

# Автоматическая отправка ответов (без модерации)
AUTO_SEND_RESPONSES=False

# ===================================
# Logging
# ===================================

LOG_LEVEL=INFO
LOG_FILE=data/logs/autootvet.log
